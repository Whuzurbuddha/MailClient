<UserControl x:Class="MailClient.views.MailInbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:data="clr-namespace:MailClient.Models"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900" Background="#331245" Foreground="Silver">
    <UserControl.DataContext>
        <data:GetMailViewModel></data:GetMailViewModel>
    </UserControl.DataContext>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Column="0" Grid.Row="0">
            <DataGrid x:Name="ReceivedMailOverview"
                      Background="#331245"
                      BorderBrush="Black"
                      BorderThickness="2"
                      Foreground="Black" 
                      AutoGenerateColumns="True"
                      ItemsSource="{Binding Path=MailBox}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Absender" 
                                        Binding="{Binding 
                                            MessageSender, 
                                            Mode=OneWay, 
                                            UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                    <DataGridTextColumn Header="Betreff" 
                                        Binding="{Binding 
                                            MessageSubject, 
                                            Mode=OneWay, 
                                            UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
        <DockPanel 
            Grid.Column="1" 
            Grid.Row="0">
            <ListView
                x:Name="ReceivedMailText"
                HorizontalAlignment="Stretch"
                Visibility="Collapsed"
                Margin="0, 0, 10, 0"
                Background="#331245"
                Foreground="Silver"
                ItemsSource="{Binding SelectedMailText}">
            </ListView>
        </DockPanel>
    </Grid>
</UserControl>
