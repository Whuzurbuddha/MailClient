<UserControl x:Class="MailClient.views.MailInbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MailClient.views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900" Background="#331245" Foreground="Silver">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Column="0" Grid.Row="0">
            <ListView x:Name="ReceivedMailOverview"
                Background="#331245"
                BorderBrush="Black"
                BorderThickness="2"
                Foreground="White">
                <ListView.Resources>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="5"></Setter>
                        <Setter Property="BorderBrush" Value="Silver"></Setter>
                        <Setter Property="BorderThickness" Value="2"></Setter>
                        <Setter Property="Margin" Value="0, 0, 0, 5"></Setter>
                        <Setter Property="Width" Value="340"></Setter>
                        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                        <Setter Property="Background" Value="#331245"></Setter>
                        <Setter Property="Foreground" Value="White"></Setter>
                        <EventSetter Event="PreviewMouseDoubleClick"
                                     Handler="ShowSelectedMailText"></EventSetter>
                    </Style>
                </ListView.Resources>
            </ListView>
        </DockPanel>
        <DockPanel 
            Grid.Column="1" 
            Grid.Row="0">
            <ListBox
                x:Name="ReceivedMailText"
                HorizontalAlignment="Stretch"
                Visibility="Collapsed"
                Margin="0, 0, 10, 0"
                Background="#331245"
                Foreground="Silver"></ListBox>
        </DockPanel>
    </Grid>
</UserControl>
