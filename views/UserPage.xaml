<Window x:Class="MailClient.views.UserPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:views="clr-namespace:MailClient.views"
        xmlns:data="clr-namespace:MailClient.models"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MailWare" Height="600" Width="1000" Background="#FF231829" FontSize="14">
    <Window.DataContext>
       <data:AccountOverviewModel></data:AccountOverviewModel>
    </Window.DataContext>
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
          </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" 
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="2,2,0,0"></Setter>
                        </Style>
                    </StackPanel.Resources>
            <Button Click="CreateNewAccount">NEW ACCOUNT</Button>
                    <Button Click="OpenNewMailWindow"
                            ToolTip="Neue Email verfassen">
                                <Viewbox Width="50" Height="50" >
                                <Rectangle Width="50 " Height="50">
                                  <Rectangle.Resources>
                                    <SolidColorBrush x:Key="canvas" Opacity="0" />
                                    <SolidColorBrush x:Key="light-defaultgrey-10" Color="#212121" Opacity="0.1" />
                                    <SolidColorBrush x:Key="light-defaultgrey" Color="#212121" Opacity="1" />
                                  </Rectangle.Resources>
                                  <Rectangle.Fill>
                                    <DrawingBrush Stretch="None">
                                      <DrawingBrush.Drawing>
                                        <DrawingGroup>
                                          <DrawingGroup x:Name="canvas">
                                            <GeometryDrawing Brush="{DynamicResource canvas}" Geometry="F1M16,16H0V0H16Z" />
                                            <GeometryDrawing Brush="{DynamicResource canvas}" Geometry="F1M16,16H0V0H16Z" />
                                            <GeometryDrawing Brush="{DynamicResource canvas}" Geometry="F1M16,16H0V0H16Z" />
                                          </DrawingGroup>
                                          <DrawingGroup x:Name="level_1">
                                            <GeometryDrawing Brush="{DynamicResource light-defaultgrey-10}" Geometry="F1M14.5,3.5v9H8.938a4.62,4.62,0,0,0,.109-.968A4.253,4.253,0,0,0,7.6,8.212,5.053,5.053,0,0,0,4.131,6.973,5.163,5.163,0,0,0,1.5,7.659V3.5Z" />
                                            <GeometryDrawing Brush="{DynamicResource light-defaultgrey-10}" Geometry="F1M14.5,3.5,8,8.5l-6.5-5Z" />
                                            <GeometryDrawing Brush="{DynamicResource light-defaultgrey}" Geometry="F1M14.5,3H1.5L1,3.5V7.991A4.734,4.734,0,0,1,2,7.4V4.535L5.366,7.113A4.788,4.788,0,0,1,7.6,8.212a4.37,4.37,0,0,1,.627.684h.078L14,4.535V12H9.013a4.234,4.234,0,0,1-.206,1H14.5l.5-.5v-9ZM8,7.869,2.97,4H13.03Z" />
                                            <GeometryDrawing Brush="{DynamicResource light-defaultgrey}" Geometry="F1M4.844,13.134H4.819a1.361,1.361,0,0,1-1.377,1.05,1.294,1.294,0,0,1-1.054-.491,2.028,2.028,0,0,1-.4-1.321,2.94,2.94,0,0,1,.55-1.826,1.727,1.727,0,0,1,1.447-.728,1.042,1.042,0,0,1,.611.188.846.846,0,0,1,.346.452h.015q.015-.136.073-.562H5.84q-.229,2.578-.23,2.627,0,.967.5.967a.88.88,0,0,0,.762-.539,2.841,2.841,0,0,0,.3-1.4A2.781,2.781,0,0,0,6.36,9.479a3.1,3.1,0,0,0-2.268-.8,3.03,3.03,0,0,0-2.3.971,3.413,3.413,0,0,0-.913,2.432A3.15,3.15,0,0,0,1.753,14.4a3.187,3.187,0,0,0,2.368.884,4.608,4.608,0,0,0,2.007-.4v.752A5.517,5.517,0,0,1,3.994,16a3.963,3.963,0,0,1-2.9-1.074A3.758,3.758,0,0,1,0,12.113,4.046,4.046,0,0,1,1.162,9.149,4,4,0,0,1,4.131,7.973a4.067,4.067,0,0,1,2.805.986,3.277,3.277,0,0,1,1.111,2.573,2.934,2.934,0,0,1-.6,1.907,1.83,1.83,0,0,1-1.472.745Q4.849,14.184,4.844,13.134Zm-.777-2.622a.989.989,0,0,0-.866.527,2.436,2.436,0,0,0-.33,1.314,1.39,1.39,0,0,0,.222.832.7.7,0,0,0,.594.3.946.946,0,0,0,.849-.554,2.972,2.972,0,0,0,.313-1.467Q4.849,10.512,4.067,10.512Z" />
                                          </DrawingGroup>
                                        </DrawingGroup>
                                      </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                  </Rectangle.Fill>
                                </Rectangle>
                              </Viewbox>
                        </Button>
                  <Button
                    Click="OpenAnswerMailWindow"
                    ToolTip="Email beantworten">
                    <Viewbox Width="50 " Height="50">
                      <Rectangle Width="50 " Height="50">
                        <Rectangle.Resources>
                          <SolidColorBrush x:Key="canvas2" Opacity="0" />
                          <SolidColorBrush x:Key="light-defaultgrey-10" Color="#212121" Opacity="0.1" />
                          <SolidColorBrush x:Key="light-defaultgrey" Color="#212121" Opacity="1" />
                        </Rectangle.Resources>
                        <Rectangle.Fill>
                          <DrawingBrush Stretch="None">
                            <DrawingBrush.Drawing>
                              <DrawingGroup>
                                <DrawingGroup x:Name="canvas2">
                                  <GeometryDrawing Brush="{DynamicResource canvas}" Geometry="F1M0,0H16V16H0Z" />
                                </DrawingGroup>
                                <DrawingGroup x:Name="level_2">
                                  <GeometryDrawing Brush="{DynamicResource light-defaultgrey-10}" Geometry="F1M15.5,8,12,11.5H1L4.5,8,1,4.5H12Z" />
                                  <GeometryDrawing Brush="{DynamicResource light-defaultgrey}" Geometry="F1M12,12H1l-.354-.854L3.793,8,.646,4.854,1,4H12l.354.146,3.5,3.5v.708l-3.5,3.5ZM2.207,11h9.586l3-3-3-3H2.207L4.854,7.646v.708Z" />
                                </DrawingGroup>
                              </DrawingGroup>
                            </DrawingBrush.Drawing>
                          </DrawingBrush>
                        </Rectangle.Fill>
                      </Rectangle>
                    </Viewbox>
                  </Button>
                </StackPanel>
            <DockPanel Grid.Row="0" Grid.Column="1" Margin="0,0,8,0">
                <DockPanel.Resources>
                    <Style TargetType="DockPanel">
                        <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                    </Style>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="50"></Setter>
                        <Setter Property="Margin" Value="0,2,2,0"></Setter>
                    </Style>
                </DockPanel.Resources>
                <Button Click="OpenAddressBook"
                        ToolTip="Adressbuch">
                    <fa:ImageAwesome Icon="AddressCardOutline"></fa:ImageAwesome>
                </Button>
                <Button ToolTip="Kalender">
                    <fa:ImageAwesome Icon="Calendar"></fa:ImageAwesome>
                </Button>
            </DockPanel>
          <DataGrid Grid.Column="0" Grid.Row="1"
                    Width="Auto"
                    Margin="5,10,0,0"
                    Background="#FF231829"
                    AutoGenerateColumns="False"
                    ItemsSource="{Binding UserAccounts, UpdateSourceTrigger=PropertyChanged}">
            <DataGrid.Columns>
              <DataGridTextColumn Header="Accounts"
                                  Binding="{Binding AccountName}"></DataGridTextColumn>
              <DataGridTextColumn Header="Email"
                                  Binding="{Binding UserMail}"></DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.RowBackground>#FF231829</DataGrid.RowBackground>
          </DataGrid>
          <DockPanel 
            Grid.Column="1" 
            Grid.Row="1">
            <views:MailInbox x:Name="MailInbox"
                             Margin="3, 10, 10,0"
              BorderBrush="Silver"
              BorderThickness="1"
              Visibility="Visible"></views:MailInbox>
          </DockPanel>
        </Grid>
</Window>
